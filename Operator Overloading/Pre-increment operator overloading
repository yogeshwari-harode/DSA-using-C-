#include<bits/stdc++.h>
using namespace std;
class Integer{
	private:
		int x;
	
	public:
    	void input(){
			cout<<"Enter any number: ";
			cin>>x;
		}
		void display(){
			cout<<"x="<<x<<endl;
		}
		Integer operator ++(){
			Integer i;
			i.x=++x;
			return (i);
		}

};


int main(){
	Integer i1,i2;
	i1.input();
	i1.display();
	i2=++i1;
	i1.display();
	i2.display();
	
	return 0;
}
