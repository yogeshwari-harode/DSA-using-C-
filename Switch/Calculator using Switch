#include<bits/stdc++.h>
using namespace std;

void add(){
	int a,b;
	cout<<"Enter two numbers : ";
	cin>>a>>b;
	cout<<a+b;
}
void sub(){
	int a,b;
	cout<<"Enter two numbers : ";
	cin>>a>>b;
	cout<<a-b;
}
void mul(){
	int a,b;
	cout<<"Enter two numbers : ";
	cin>>a>>b;
	cout<<a*b;
}
void div(){
	int a,b;
	cout<<"Enter two numbers : ";
	cin>>a>>b;
	cout<<a/b;
}

int main(){
	int choice;
	
	while(1){
		cout<<"\n1. Addition\n2. Subtraction\n3. Multiplication\n4. Division\n5. Exit\n";
		cout<<"Enter your choice : ";
		cin>>choice;
		switch(choice){
			case 1: add();
				break;
			case 2: sub();
				break;
			case 3: mul();
				break;
			case 4: div();
				break;
			case 5: exit(0);
				break;
			default : cout<<"Wrong choice";
				break;
			 
		}
	}
	return 0;
}
